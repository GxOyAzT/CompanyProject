<Page x:Class="WpfHR.LogIn.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfHR.LogIn"
      mc:Ignorable="d"  Background="Transparent"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="E-mail" FontSize="15"/>
            <TextBox x:Name="TxbEmail" Padding="2" FontSize="15" Width="250"/>
            <TextBlock Text="Password" FontSize="15"/>
            <PasswordBox x:Name="PasswordBox" Padding="2" FontSize="15" Width="250"/>
            <Button Content="Confirm" FontSize="15" Margin="0,15,0,0"
                    Click="Click_BtnLogIn"/>
        </StackPanel>
    </Grid>
</Page>
