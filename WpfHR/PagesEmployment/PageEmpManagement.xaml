<Page x:Class="WpfHR.PagesEmployment.PageEmpManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfHR.PagesEmployment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEmpManagement">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <UniformGrid Columns="2" Rows="2">
                <TextBlock Text="Management name  " Margin="2" FontSize="17" HorizontalAlignment="Right"/>
                <TextBox x:Name="TxbManagementName" Margin="2" FontSize="17" MinWidth="150" Padding="2"/>
                <TextBlock Text="Salary increase  " Margin="2" FontSize="17" HorizontalAlignment="Right"/>
                <TextBox x:Name="TxbManagementSalaryIncr" Margin="2" FontSize="17" MinWidth="150" Padding="2"/>
            </UniformGrid>
            <Button Content="Save" Margin="80,10,80,0" Click="Click_Save"/>
        </StackPanel>
    </Grid>
</Page>
